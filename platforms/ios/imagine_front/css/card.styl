@import './mixin'

c2 = #2980b9
c1 = #3498db
max_width = 320px
max_height = 428px
bar-height = 50px

article
	display block
	width 100%
	height max_height
.card_item
	width max_width
	background c2
	height max_height
	position relative
	img.u_word
		width max_width
		vertical-middle-auto()
		z-index 5
	> div
		font-size 36px
		vertical-middle 80px
		text_center()

	.empty_tip
		margin-top 40px
		color c1
		z-index 1
	.title
		line-height 80px
		text-shadow-black()
		z-index 9
#info
	.modal-header
		.title
			text-align center
			font-size 26px
			background c1
			line-height bar-height
	.modal-footer
		.close
			text-align center
			font-size 26px
	.container
		width 320px
		> div
			padding 0 20px
			margin-bottom 15px
		.family
			margin-top 15px
		.tagg
			border-radius 8px
			background c1
			padding 0 5px
			margin 3px
			display inline-block
		.con,.quote
			margin-bottom 5px
			.pos
				font-style italic
			.text
				margin-left 3px



