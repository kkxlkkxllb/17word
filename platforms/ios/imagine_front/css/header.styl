@import './mixin'

bar-height = 50px
c1 = #3498db
c2 = #2980b9

nav
	max-height bar-height
	height bar-height
	background c1
	border-bottom 1px dashed c2
	vbg-gradient(c1,c2)
	.banner
		top 0
		margin 0
		position relative
		height 100%
		text_center()
		span
			position absolute
			display block
			font-size 26px
			top 0px
			text-shadow-inset()
			width 50px
			line-height bar-height
		span.left
			left 5px
		.title
			text-shadow-inset()
			font-size 30px
			line-height bar-height
			width 200px
			margin 0 auto
